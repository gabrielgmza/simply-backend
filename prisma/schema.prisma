  status          RewardStatus @default(PENDING)
  
  source_type     String?   // INVESTMENT, REFERRAL, MANUAL, etc.
  source_id       String?
  description     String?
  
  expires_at      DateTime?
  redeemed_at     DateTime?
  
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
  
  @@index([user_id])
  @@index([status])
  @@index([type])
  @@index([expires_at])
}

